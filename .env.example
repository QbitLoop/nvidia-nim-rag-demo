# NVIDIA NIM API Configuration
NVIDIA_API_KEY=nvapi-xxxxx

# NIM Endpoints (build.nvidia.com)
NIM_BASE_URL=https://integrate.api.nvidia.com/v1
NIM_LLM_MODEL=meta/llama-3.1-70b-instruct
NIM_EMBED_MODEL=nvidia/nv-embedqa-e5-v5

# PostgreSQL + pgvector
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_demo
PGVECTOR_DIMENSION=1024

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
